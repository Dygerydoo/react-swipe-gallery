.SwipeGallery
  display flex
  &-previous
  &-next
    font-size 1.2em
    display flex
    cursor pointer
    &--rotate90
      margin 0 auto
      & > div
        transform rotate(90deg)
        transform-origin left
  &-container
    transition all 500ms ease-in
    display flex
  &-element
    &--left
      transform translate3d(-100%, 0, 0)
    &--right
      transform translate3d(100%, 0, 0)
    &--invisible
      position absolute
      opacity 0
      top 0
      left 0
      z-index -1
      transition all 500ms ease-out
    &--visible
      position relative
      opacity 1
      transition all .45s ease-in
  &--vertical
    flex-direction column
    & .SwipeGallery-container
      flex-direction column
      align-items center


